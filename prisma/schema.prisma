generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                         String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name                       String
  email                      String    @unique
  password_hash              String
  roles                      String[]  @default(["collector", "user"])
  tenant_id                  String
  is_active                  Boolean   @default(true)
  is_2fa_enabled             Boolean   @default(false)
  email_confirmed            Boolean   @default(false)
  email_confirmation_token   String?
  email_confirmed_at         DateTime? @db.Timestamptz(6)
  email_confirmation_expires DateTime? @db.Timestamptz(6)
  password_reset_token       String?
  password_reset_expires     DateTime? @db.Timestamptz(6)
  two_fa_secret              String?
  two_fa_recovery_codes      String[]
  oauth_provider             String?
  oauth_id                   String?
  created_at                 DateTime  @default(now()) @db.Timestamptz(6)
  updated_at                 DateTime  @default(now()) @db.Timestamptz(6)
  profile                    profile?

  @@map("users")
}

model profile {
  id                         String                      @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id                    String                      @unique @db.Uuid
  display_name               String
  avatar_url                 String?
  bio                        String?
  birthdate                  DateTime?                   @db.Date
  phone                      String?
  address_shipping           Json?                       @db.Json
  address_billing            Json?                       @db.Json
  payment_methods            Json?                       @db.Json
  profile_visibility         Boolean?                    @default(true)
  email_notifications        Boolean?                    @default(true)
  sms_notifications          Boolean?                    @default(false)
  theme                      String[]
  created_at                 DateTime                    @default(now()) @db.Timestamptz(6)
  updated_at                 DateTime                    @default(now()) @db.Timestamptz(6)
  users                      User                        @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  profile_collection         profile_collection?
  profile_marketplace        profile_marketplace?
  profile_social_preferences profile_social_preferences?
}

model profile_collection {
  id              String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  profile_id      String   @unique @db.Uuid
  collection      Json?    @db.Json
  cards_owned     Int?     @default(0)
  cards_value     Float?   @default(0.0)
  wishlist        Json?    @db.Json
  collection_tags String[]
  created_at      DateTime @default(now()) @db.Timestamptz(6)
  updated_at      DateTime @default(now()) @db.Timestamptz(6)
  profile         profile  @relation(fields: [profile_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model profile_marketplace {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  profile_id String   @unique @db.Uuid
  orders     Json?    @db.Json
  is_saler   Boolean? @default(false)
  sales      Json?    @db.Json
  created_at DateTime @default(now()) @db.Timestamptz(6)
  updated_at DateTime @default(now()) @db.Timestamptz(6)
  profile    profile  @relation(fields: [profile_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model profile_social_preferences {
  id               String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  profile_id       String   @unique @db.Uuid
  friends          String[]
  followers        String[]
  users_following  String[]
  friends_to_trade Json?    @db.Json
  trades           Json?    @db.Json
  created_at       DateTime @default(now()) @db.Timestamptz(6)
  updated_at       DateTime @default(now()) @db.Timestamptz(6)
  profile          profile  @relation(fields: [profile_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}
